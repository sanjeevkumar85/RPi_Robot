include "m8c.inc"


;--------------------------------------------------
; Constants for Servo_PWM API's.
;--------------------------------------------------

Servo_PWM_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
Servo_PWM_INT_REG:                         equ 0x0df
Servo_PWM_INT_MASK:                        equ 0x04


;--------------------------------------------------
; Constants for Servo_PWM user defined values
;--------------------------------------------------

Servo_PWM_PERIOD:                          equ 0x168
Servo_PWM_PULSE_WIDTH:                     equ 0x0


;--------------------------------------------------
; Register Address Constants for Servo_PWM
;--------------------------------------------------

Servo_PWM_COUNTER_LSB_REG:             equ 0x44   ; DR0 Count register
Servo_PWM_COUNTER_MSB_REG:             equ 0x48
Servo_PWM_PERIOD_LSB_REG:              equ 0x45   ; DR1 Period register
Servo_PWM_PERIOD_MSB_REG:              equ 0x49
Servo_PWM_COMPARE_LSB_REG:             equ 0x46   ; DR2 Compare register
Servo_PWM_COMPARE_MSB_REG:             equ 0x4a
Servo_PWM_CONTROL_LSB_REG:             equ 0x47   ; Control register
Servo_PWM_CONTROL_MSB_REG:             equ 0x4b
Servo_PWM_FUNC_LSB_REG:                equ 0x44   ; Function register
Servo_PWM_FUNC_MSB_REG:                equ 0x48
Servo_PWM_INPUT_LSB_REG:               equ 0x45   ; Input register
Servo_PWM_INPUT_MSB_REG:               equ 0x49
Servo_PWM_OUTPUT_LSB_REG:              equ 0x46   ; Output register
Servo_PWM_OUTPUT_MSB_REG:              equ 0x4a


;--------------------------------------------------
; Servo_PWM Macro 'Functions'
;--------------------------------------------------

   macro Servo_PWM_Start_M
   or    reg[Servo_PWM_CONTROL_LSB_REG],  Servo_PWM_CONTROL_REG_START_BIT
   endm

   macro Servo_PWM_Stop_M
   and   reg[Servo_PWM_CONTROL_LSB_REG], ~Servo_PWM_CONTROL_REG_START_BIT
   endm

   macro Servo_PWM_EnableInt_M
   M8C_EnableIntMask Servo_PWM_INT_REG, Servo_PWM_INT_MASK
   endm

   macro Servo_PWM_DisableInt_M
   M8C_DisableIntMask Servo_PWM_INT_REG, Servo_PWM_INT_MASK
   endm


